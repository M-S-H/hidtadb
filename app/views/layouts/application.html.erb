<!DOCTYPE html>
<html>
<head>
	<title>HNM HIDTA</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => false %>
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
	<%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
<header>
	<div id="hwrap">
		<%= image_tag 'logo.png', id: 'logo', width: '100px', height: '100px' %>
		<h1>HIDTA New Mexico&nbsp</h1>
		<span>
			Welcome, <%= current_user.fname + " " + current_user.lname %>
			<%= link_to 'Logout', '/users/sign_out', :method => :delete %>
		</span>
		<!--
		<h1>HIDTA New Mexico&nbsp<button type="button" class="btn btn-primary"><%= link_to 'Logout', '/users/sign_out', :method => :delete %></button></h1>
	-->
	</div>
</header>
  

<div id="content">
	<nav>
		<% if current_user.admin? %>
			<a href="/control_panel">
				<div class="nav-item"><%= image_tag 'admin.png', width: '75px', height: '50px' %> ADMIN</div>
			</a>
		<% end %>
		<!-- if user==admin || user==entry  -->
		<a href="/siezure_reports">
			<div class="nav-item"><%= image_tag 'report.png', width: '75px', height: '50px' %> REPORTS</div>
		</a>
		<!-- if user==admin || user==entry -->
		<a href="/subjects">
			<div class="nav-item"><%= image_tag 'person.png', width: '75px', height: '50px' %> SUBJECTS</div>
		</a>
		<!-- if user==admin || user==entry  -->
		<a href="/vehicles">
			<div class="nav-item"><%= image_tag 'car.png', width: '75px', height: '50px' %> VEHICLES</div>
		</a>
		<a href="/searches">
			<div class="nav-item"><%= image_tag 'spyglass.png', width: '75px', height: '50px' %> SEARCH</div>
		</a>
	</nav>

	<div id="page">
		<%= yield %>
	</div>
</div>

<% else %>
	<%= yield %>
<% end %>

</body>
</html>
