<h1>Listing vehicles</h1>

<%= form_tag vehicles_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %></p>
<table class="listtable">
	<thead>
		<tr>
			<th>Plate</th>
			<th>Model</th>
			<th>Year</th>
			<th>State</th>
			<th>Owner</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @vehicles.each do |vehicle| %>
			<tr>
				<td><%= link_to vehicle.plate, vehicle %></td>
				<td><%= vehicle.model %></td>
				<td><%= vehicle.year %></td>
				<td><%= vehicle.state %></td>
				<td><%= vehicle.owner %></td>
				<td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
				<td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>
