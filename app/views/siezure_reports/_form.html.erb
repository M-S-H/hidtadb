			<% end %>
			</ul>
		</div>
	<% end %>

	<h3>General Information</h3>

	<table width="100%">
		<tr>
			<td>
				<div class="field">
					<%= f.label :taskforce, 'Taskforce' %><br>
					<%= f.text_field :taskforce %>
				</div>
			</td>
			<td>
				<div class="field">
					<%= f.label :agency, 'Agency' %><br>
					<%= f.text_field :agency %>
				</div>
			</td>
			<td>
				<div class="field">
					<%= f.label :casenum, 'Case Number' %><br>
					<%= f.text_field :casenum %>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :cjis, 'CJIS' %><br>
					<%= f.text_field :cjis %>
				</div>
			</td>
			<td>
				<div class="field">
					<%= f.label :initiative, 'Initiative' %><br>
					<%= f.text_field :initiative %>
				</div>
			</td>
			<td>
				<div class="field">
					<%= f.label :siezuredate, 'Date of Siezure' %><br>
					<%= f.date_select :siezuredate %>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="field">
					<%= f.label :siezuretime, 'Time of Siezure' %><br>
