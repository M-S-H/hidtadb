<h1>Seizure Reports</h1>

<%= form_tag siezure_reports_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %></p>
<table class="listtable">
	<thead>
		<tr>
			<th>Case Number</th>
			<th>Taskforce</th>
			<th>Date</th>
			<% if !current_user.field? %>
				<th>Edit</th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% @siezure_reports.each do |siezure_report| %>
			<tr>
				<td><%= link_to siezure_report.casenum, siezure_report %></td>
				<td><%= siezure_report.taskforce %></td>
				<td><%= siezure_report.siezuredate %></td>
				<% if !current_user.field? %>
					<td><%= link_to 'Edit', edit_siezure_report_path(siezure_report) %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<% if !current_user.field? %>
	<%= link_to 'New Seizure report', new_siezure_report_path %>
<% end %>
