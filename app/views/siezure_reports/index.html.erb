<h1>Siezure Reports</h1>

<%= form_tag siezure_reports_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %></p>
<table class="listtable">
	<thead>
		<tr>
			<th>Case Number</th>
			<th>Taskforce</th>
			<th>Date</th>
			<th>Address</th>
			<th>City</th>	
			<th>State</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>

	<tbody>
		<% @siezure_reports.each do |siezure_report| %>
			<tr>
				<td><%= link_to siezure_report.casenum, siezure_report %></td>
				<td><%= siezure_report.taskforce %></td>
				<td><%= siezure_report.siezuredate %></td>
				<td><%= siezure_report.address %></td>
				<td><%= siezure_report.city %></td>
				<td><%= siezure_report.state %></td>
				<td><%= link_to 'Edit', edit_siezure_report_path(siezure_report) %></td>
				<td><%= link_to 'Destroy', siezure_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Siezure report', new_siezure_report_path %>
