<h1>Listing subjects</h1>

<%= form_tag subjects_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %></p>

<!-- 
<%= link_to('Popover test', '#', :class => "popover-test") %>
-->

<table class="listtable">
	<thead>
		<tr>
			<th>Name</th>
			<th>Dob</th>
			<th>Ssn</th>
			<th>State</th>
			<% if !current_user.field? %>
				<th>Edit</th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% @subjects.each do |subject| %>
			<tr>
				<td><%= link_to subject.name, subject %></td>
				<td><%= subject.dob %></td>
				<td><%= subject.ssn %></td>
				<td><%= subject.state %></td>
				<% if !current_user.field? %>
					<td><%= link_to 'Edit', edit_subject_path(subject) %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<% if !current_user.field? %>
	<%= link_to 'New Subject', new_subject_path %>
<% end %>